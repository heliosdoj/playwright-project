{
  "compilerOptions": {
    // === Core target (perfect for Automation QA Team) ===
    "target": "ES2022",
    "lib": ["ES2022", "dom", "dom.iterable"],   
    "module": "ESNext",
    "moduleResolution": "bundler",              

    // === JS â†’ TS migration mode (safe now, easy to remove later @ Phase II) ===
    "allowJs": true,
    "checkJs": true,

    // === Strictness ===
    "strict": true, 

    // === Extra safety flags  ===
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,

    // === Output settings ===
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": false,                       
    "declarationMap": false,                    
    "sourceMap": true,                          // gotta debug 
    "removeComments": true,                     // Need this otherwise I will get confused with Phase II, III

    // === Import / path aliases ===
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["pages/*"],
      "@utils/*": ["utils/*"],
      "@types/*": ["types/*"],
      "@tests/*": ["tests/*"]
    },

    // === Modern interop ===
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    // === Performance & safety ===
    "skipLibCheck": true,                       // must-have for this large project (Phase I only - 12/4/2025 )
    "forceConsistentCasingInFileNames": true,  // does team use MacOS? (catches Windows/macOS bugs)
    "verbatimModuleSyntax": true,              

    // === Types ===
    "types": ["node", "@playwright/test"]       
  },

  // === Include / exclude ===
  "include": [
    "**/*.ts",
    "**/*.js",                                  //  .js files are checked too (if QA team forks over code for own project)
    "playwright.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "allure-results",
    "allure-report",
    "playwright-report",
    "test-results",
    "test-results/**",
    "*.config.js"                               // optional: exclude old JS configs
  ]
}