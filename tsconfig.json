{
  "compilerOptions": {
    // === Core target (perfect for Automation QA Team) ===
    "target": "ES2022",
    "lib": ["ES2022", "dom", "dom.iterable"],   
    "module": "ESNext",
    "moduleResolution": "bundler",              

    // === JS → TS migration mode (safe now, easy to remove later) ===
    "allowJs": true,
    "checkJs": true,

    // === Strictness ===
    "strict": true, 

    // === Extra safety flags  ===
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,

    // === Output settings (perfect for Playwright) ===
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": false,                       // ← change to false (no one uses .d.ts in Playwright tests)
    "declarationMap": false,                    // ← also disable
    "sourceMap": true,                          // keep true for debugging
    "removeComments": true,                     // ← add this for cleaner output

    // === Import / path aliases (excellent) ===
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["pages/*"],
      "@utils/*": ["utils/*"],
      "@types/*": ["types/*"],
      "@tests/*": ["tests/*"]
    },

    // === Modern interop (perfect) ===
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    // === Performance & safety ===
    "skipLibCheck": true,                       // must-have for large projects
    "forceConsistentCasingInFileNames": true,  // ← add this (catches Windows/macOS bugs)
    "verbatimModuleSyntax": true,               // ← CHANGE TO true (2025 best practice)

    // === Types ===
    "types": ["node", "@playwright/test"]       // ← add @playwright/test
  },

  // === Include / exclude (perfect for Playwright) ===
  "include": [
    "**/*.ts",
    "**/*.js",                                  // ← add this line so .js files are checked too
    "playwright.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "allure-results",
    "allure-report",
    "playwright-report",
    "test-results",
    "test-results/**",
    "*.config.js"                               // optional: exclude old JS configs
  ]
}