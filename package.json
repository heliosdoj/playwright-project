{
  "name": "playwright",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "test:smoke": "pnpm exec playwright test --grep \"@smoke\"",
    "test:regression": "pnpm exec playwright test --grep \"@regression\"",
    "test:all": "pnpm exec playwright test --grep \"@regression\" && pnpm exec playwright test --grep \"@regression\"",
    "test:except": "pnpm exec playwright test --grep-invert",
    "install:browsers": "pnpm exec playwright install",
    "test": "pnpm exec playwright test",
    "test:ui": "pnpm exec playwright test --ui",
    "test:headed": "pnpm exec playwright test --headed",
    "test:debug": "pnpm exec playwright test --debug",
    "test:steps": "pnpm exec playwright test --headed --debug",
    "report": "pnpm exec playwright show-report",
    "allure:gen": "pnpm exec allure generate allure-results --clean -o allure-report",
    "allure:open": "pnpm exec allure open allure-report",
    "lint": "pnpm exec eslint . --ext .ts,.js",
    "lint:fix": "pnpm exec eslint . --ext .ts,.js --fix",
    "format": "pnpm exec prettier --write .",
    "format:check": "pnpm exec prettier --check .",
    "lint:all": "pnpm exec eslint . --ext .ts,.js && pnpm exec prettier --check .",
    "generate:docs": "pnpm exec typedoc --options typedoc.json"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.2",
    "concurrently": "^8.2.2",
    "eslint": "^9.9.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typedoc": "^0.26.5",
    "typescript": "^5.5.4"
  }
}
